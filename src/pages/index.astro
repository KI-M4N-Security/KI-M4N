<style>

    /* Custom Cyberpunk Styles */
    .huge-link {
        font-size: 3rem;
        font-weight: 900;
        color: transparent;
        -webkit-text-stroke: 1px rgba(0, 255, 0, 0.3);
        text-transform: uppercase;
        transition: all 0.3s ease;
        position: relative;
    }

    .huge-link:hover {
        color: #00FF00;
        text-shadow: 0 0 20px rgba(0, 255, 0, 0.6);
        -webkit-text-stroke: 0px;
        transform: scale(1.05);
    }

    /* Mobile adjustments for Huge Nav */
    @media (max-width: 768px) {
        .huge-link {
            font-size: 2rem;
        }
    }

	@keyframes scan {
        0% { transform: translateY(-100%); }
        100% { transform: translateY(300%); }
    }
    .animate-scan {
        animation: scan 4s linear infinite;
    }

	/* OPERATIONS CARDS STYLES */
	.cards {
		width: 100%;
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}
	@media (min-width: 768px) {
		.cards {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	.card {
		position: relative;
		border-radius: 4px;
		background: #050505;
		min-height: 450px;
		color: white;
		font-family: 'Fira Code', monospace;
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: all 0.3s ease;

		/* Colors */
		&:nth-child(1) { --moon-clr: #808080; } /* Black Pill (Grey glow) */
		&:nth-child(2) { --moon-clr: #a65f00; } /* Orange */
		&:nth-child(3) { --moon-clr: #9f0712; } /* Red */
		&:nth-child(4) { --moon-clr: #00598a; } /* Blue */

		& > div {
			position: relative;
			z-index: 2;
			display: flex;
			flex-direction: column;
			height: 100%;
			padding: 1.5rem;
			background: linear-gradient(180deg, rgba(20,20,20,0.5) 0%, rgba(0,0,0,0) 100%);
		}

		/* Hover Effect */
		&:hover {
			border-color: var(--moon-clr);
			box-shadow: 0 0 25px -5px var(--moon-clr);
			transform: translateY(-5px);
		}

		& .pill-icon {
			font-size: 2.5rem;
			color: #444;
			margin-bottom: 1rem;
            text-align: center;
			transition: all 0.3s ease;
		}
		
		&:hover .pill-icon {
			color: var(--moon-clr);
			filter: drop-shadow(0 0 10px var(--moon-clr));
			transform: scale(1.1);
		}

		& h2 {
			font-size: 1.1rem;
			font-weight: bold;
			color: white;
			margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
			transition: color 0.3s;
		}
		
		&:hover h2 {
			color: var(--moon-clr);
			text-shadow: 0 0 5px var(--moon-clr);
		}

		& p {
			font-size: 0.85rem;
			line-height: 1.5;
			color: #aaa;
			flex-grow: 1;
			margin-bottom: 1.5rem;
		}

		& a {
			margin-top: auto;
			background-color: transparent;
			color: var(--moon-clr);
			font-size: 0.8rem;
			text-transform: uppercase;
			padding: 0.5rem;
			text-decoration: none;
			border: 1px solid var(--moon-clr);
			transition: all 0.3s ease;
			text-align: center;
            font-weight: bold;
            display: block;

			&:hover {
				background-color: var(--moon-clr);
				color: white;
				box-shadow: 0 0 20px var(--moon-clr);
			}
		}
	}

    @keyframes fadeIn {
        to { opacity: 1; }
    }
    @keyframes flicker {
		0% { opacity: 0.8; }
		5% { opacity: 1; }
		10% { opacity: 0.85; }
		15% { opacity: 0.95; }
		20% { opacity: 0.8; }
		100% { opacity: 1; }
	}

    /* --- HOVER TEXT STYLES --- */

    /* For Hero Links */
    .huge-link[data-hover-text]:hover::after {
        content: attr(data-hover-text);
        position: absolute;
        left: 105%;
        top: 50%;
        transform: translateY(-50%);
        font-size: 4rem;
        font-weight: 400;
        color: #00FFFF;
        text-shadow: 0 0 10px #ff0000;
        -webkit-text-stroke: 0;
        white-space: nowrap;
        animation: flicker 1.5s infinite;
        pointer-events: none;
    }

    /* For Capability Matrix */
    .group[data-hover-text] {
        position: relative;
    }
    .group[data-hover-text]:hover::after {
        content: attr(data-hover-text);
        position: absolute;
        top: -5px;
        right: 0;
        background: #00FF00;
        color: black;
        font-size: 25px;
        font-weight: bold;
        padding: 2px 6px;
        border-radius: 2px;
        white-space: nowrap;
        opacity: 0;
        animation: fadeIn 0.3s forwards;
        z-index: 10;
    }

    /* For Card & Simulation Buttons */
    .card a[data-hover-text],
    .captive-portal-button[data-hover-text] {
        position: relative;
    }
    .card a[data-hover-text]:hover::before,
    .captive-portal-button[data-hover-text]:hover::before {
        content: attr(data-hover-text);
        position: absolute;
        bottom: 110%;
        left: 50%;
        transform: translateX(-50%);
        background: black;
        padding: 4px 8px;
        font-size: 10px;
        white-space: nowrap;
        border-radius: 2px;
        opacity: 0;
        animation: fadeIn 0.3s forwards;
        z-index: 10;
    }
    .card a[data-hover-text]:hover::before {
        color: var(--moon-clr);
        border: 1px solid var(--moon-clr);
    }
    .captive-portal-button[data-hover-text]:hover::before {
        color: #00FFFF;
        border: 1px solid #a6ff00;
    }
</style>